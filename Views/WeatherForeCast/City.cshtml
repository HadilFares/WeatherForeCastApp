@model WeatherForeCastApp.Models.City

@{
    ViewData["Title"] = "City";
}


<div class="container">

    <div class="container">

        <div class="form-group col-md-offset-3 col-md-5">
            
            <h2>Forecast for the selected city</h2>

            <label asp-for="Name"></label>
            <span class="badge alert-primary">@Model.Name</span>
            <br />

            <label asp-for="Temp"></label>
            <span class="badge alert-primary" >@Model.Temp °F</span>
            <br />

            <label asp-for="Humidity"></label>
            <span class="badge alert-primary">@Model.Humidity %</span>
            <br />

            <label asp-for="Pressure"></label>
            <span class="badge alert-primary">@Model.Pressure Hpa</span>
            <br />

            <label asp-for="Wind"></label>
            <span class="badge alert-primary">@Model.Wind MPH</span>
            <br />

            <label asp-for="Weather"></label>
            <span class="badge alert-primary">@Model.Weather</span>

            <img src="@Model.ImagePath" />


                <form method="get">
                    <button asp-controller="WeatherForecast" asp-action="SearchByCity" class="btn btn-success">Return</button>
                </form>

            </div>
         

        </div>

</div>

